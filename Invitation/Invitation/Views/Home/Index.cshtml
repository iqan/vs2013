@model Invitation.Models.Response

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <table>
        <tbody>
        <tr>
            <td>Name:</td>
            <td>@Html.TextBoxFor(m => m.Name)</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBoxFor(m => m.Email)</td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td>@Html.TextBoxFor(m => m.Phone)</td>
        </tr>
        <tr>
            <td>Will you attend?</td>
            <td>@Html.DropDownListFor(m => m.WillAttend, new[]
                {
                    new SelectListItem() {Text = "Yes, I'll be there.", Value = bool.TrueString},
                    new SelectListItem() {Text = "No, I can't be there.", Value = bool.FalseString}
                }, "Choose an option"
                )
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Submit"/>
            </td>
        </tr>
        </tbody>
    </table>
}
